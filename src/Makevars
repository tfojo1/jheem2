# Standard specification
CXX_STD = CXX17

# Windows/Linux cross-compatibility flags
PKG_CXXFLAGS = -std=c++17 -I${R_HOME}/include -O0 -D_GLIBCXX_USE_CXX11_ABI=0 -DR_NO_REMAP

# Force static linking of C++ standard library to avoid ABI issues
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -L${R_HOME}/lib -lR -static-libstdc++ -Wl,-Bsymbolic

# Use position-independent code
CXXFLAGS = -fPIC
